<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center">
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/transparent_logo_horizontal_large"
            android:scaleType="centerCrop"/>

    <EditText
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/search_screen_margin_size"
            android:layout_marginRight="@dimen/search_screen_margin_size"
            android:hint="@string/enter_text"
            android:textSize="@dimen/search_screen_text_size"/>

    <Button
            android:id="@+id/search_gifs_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/search_screen_margin_size"
            android:textSize="@dimen/search_screen_text_size"
            android:textStyle="bold"
            android:text="@string/search"/>


</LinearLayout>